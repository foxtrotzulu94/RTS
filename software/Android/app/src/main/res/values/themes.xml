<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RTSMobile" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_overlay</item>
        <item name="colorPrimaryVariant">@color/white_overlay</item>
        <item name="colorOnPrimary">@color/tr_blue</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorPrimary">@color/white</item>-->
<!--        <item name="colorPrimaryVariant">@color/white_overlay</item>-->
<!--        <item name="colorOnPrimary">@color/tr_orange</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.RTSMobile.Fullscreen" parent="Theme.RTSMobile">
        <item name="android:actionBarStyle">@style/Widget.Theme.RTSMobile.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.RTSMobile.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/white_bg</item>
        <item name="fullscreenTextColor">@color/white_overlay</item>
    </style>
</resources>